<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.tomohiko_sato.owltube">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name=".OwlTubeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.search.SearchActivity"/>
        <activity android:name=".presentation.player.PlayerActivity"/>
        <activity android:name=".presentation.top.TopActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.setting.SettingActivity"/>

        <service
            android:name=".presentation.player.ExternalPlayerService"
            android:enabled="true"
            android:exported="true">
        </service>
    </application>

</manifest>