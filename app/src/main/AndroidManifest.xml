<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.tomohiko_sato.owltube">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>

    <application
        android:name="com.example.tomohiko_sato.owltube.OwlTubeApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.tomohiko_sato.owltube.presentation.search.SearchActivity"/>
        <activity android:name="com.example.tomohiko_sato.owltube.presentation.player.PlayerActivity"/>
        <activity android:name="com.example.tomohiko_sato.owltube.presentation.main.TopActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.tomohiko_sato.owltube.presentation.setting.SettingActivity"/>
    </application>
</manifest>