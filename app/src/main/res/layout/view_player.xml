<?xml version="1.0" encoding="utf-8"?>
<com.example.tomohiko_sato.owltube.presentation.player.external.ExternalPlayerView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.pierfrancescosoffritti.youtubeplayer.YouTubePlayerView
        android:id="@+id/youtube_player_view"
        android:layout_width="@dimen/player_float_width"
        android:layout_height="@dimen/player_float_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center"/>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</com.example.tomohiko_sato.owltube.presentation.player.external.ExternalPlayerView>